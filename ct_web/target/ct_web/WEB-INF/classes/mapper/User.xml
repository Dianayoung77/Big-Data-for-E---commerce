<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.dao.UserDao">
    <resultMap id="userList" type="com.model.User">
        <id column="id" property="id" ></id>
        <id column="email" property="email" ></id>
        <id column="password" property="password" ></id>
        <id column="username" property="username" ></id>
        <id column="role" property="role" ></id>
        <id column="status" property="status" ></id>
        <id column="regTime" property="regTime" ></id>
        <id column="regIp" property="regIp" ></id>
    </resultMap>
    <select id="getAllUser" resultMap="userList">
        SELECT * FROM user
    </select>

    <!-- 添加 PurchaseStatsDAO.getPurchaseStatsList 的 SQL 语句 -->
    <select id="getPurchaseStatsList" resultType="com.model.PurchaseStats">
        SELECT * FROM purchase_stats WHERE user_id = #{user_id} AND year = #{year} AND month = #{month} AND day = #{day}
    </select>
</mapper>